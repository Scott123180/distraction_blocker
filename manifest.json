{
    "name": "Distraction Blocker",
    "version": "0.0",
    "description": "Blocks recommended content so that you don't get hooked into social media and waste time.",
    "permissions": ["activeTab", "tabs"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
          "matches": [
            "<all_urls>"
          ],
          "js": ["content.js"]
        }
      ],
    "manifest_version": 2
  }